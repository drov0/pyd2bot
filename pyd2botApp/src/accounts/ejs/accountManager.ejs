<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8" />
        <title>Grider</title>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="<%= nodeModulesUrl + '/bootstrap/dist/css/bootstrap.min.css'%>" />
        <!-- Custom CSS -->
        <link rel="stylesheet" href="<%= cssUrl + '/main.css'%>"/>
        <!-- Bootstrap Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script>let $ = require('jquery');</script>
        <script>require('popper');</script>
        <script>require('bootstrap');</script>
        <script defer src="render.js"></script>
    </head>

<body>
    <div class="wrapper">
        <%- include(sidebarUrl, {active: 'characters' }) %>
        <div class="bodyRightView">
            <ul class="nav nav-tabs" style="background: #262626">
                <li class="nav-item"><a class="nav-link" aria-current="page" href="<%=accountUrls.manageCharactersUrl%>">Characters</a></li>
                <li class="nav-item"><a class="nav-link active" aria-current="page" href="#">Accounts</a></li>
            </ul>
            <table class="table table-dark table-striped" style="margin-bottom: 0;">
                <thead>
                    <th scope="col">entryId</th>
                    <th scope="col">login</th>
                    <th scope="col">password</th>
                    <th scope="col">action</th>
                </thead>
                <tbody>
                    <% Object.entries(accounts).forEach(([key, account]) => {%>
                    <tr>
                        <td scope="row"><%= key%></td>
                        <td><%= account.login%></td>
                        <td><%= accountsPasswords[key] %></td>
                        <td>
                            <div class="dropdown">
                                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                  <li><a class="dropdown-item" href="#" onclick="editAccount('<%= key%>')">edit</a></li>
                                  <li><a class="dropdown-item" href="#" onclick="hideUnhidePassword('<%= key%>')">hide/unhide password</a></li>
                                  <li><a class="dropdown-item" href="#" onclick="deleteAccount('<%= key%>')">delete</a></li>
                                  <li><a class="dropdown-item" href="#" onclick="fetchCharacters('<%= key%>')">fetch characters</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <div class="managerBottomButtonsBar">
                <a href="<%=accountUrls.newAccountUrl%>"><button class="btn btn-primary" >new</button></a>
                <button class="btn btn-primary" onclick="saveAccounts()">save</button>
            </div>
        </div>
    </div>
</body>

</html>