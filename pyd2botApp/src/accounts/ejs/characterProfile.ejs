<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8" />
        <title>Grider</title>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="<%= nodeModulesUrl + '/bootstrap/dist/css/bootstrap.min.css'%>" />
        <!-- Custom CSS -->
        <link rel="stylesheet" href="<%= cssUrl + '/main.css'%>"/>
        <!-- Bootstrap Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script>let $ = require('jquery');</script>
        <script>require('popper');</script>
        <script>require('bootstrap');</script>
        <script defer src="render.js"></script>
        
    </head>

<body>
    <div class="wrapper">
        <%- include(sidebarUrl, {active: 'characters' }) %>
        <% var selectedCharacter = accounts.charactersDB[accounts.selectedCharacterKey]%>
        <div class="bodyRightView">
            <div class="characterProfileContainer">
                <div class="characterProfileHeader">
                    <img src="<%=accounts.getClassIcon(accounts.selectedCharacterKey)%>" width="200" height="200">
                    <div>
                        <h><%= selectedCharacter.name%></h>
                        <h2><%= selectedCharacter.breedName%> lvl <%= selectedCharacter.level%></h2>
                    </div>
                </div>
                <div class="characterProfileSection">
                    <h>General</h>
                    <hr size="8" width="90%" color="red"> 
                    <div class="myform-group">
                        <label>name :</label> 
                        <label><%= selectedCharacter.name%>
                    </div>
                    <div class="myform-group">
                        <label>breed :</label> 
                        <label><%= selectedCharacter.breedName%></label>
                    </div>
                    <div class="myform-group">
                        <label>server :</label> 
                        <label><%= selectedCharacter.serverName%></label>
                    </div>
                    <div class="myform-group">
                        <label>account :</label> 
                        <label><%= selectedCharacter.accountId%></label>
                    </div>
                </div>
                <div class="characterProfileSection">
                    <h>Fight</h>
                    <hr size="8" width="90%" color="red">
                    <div class="myform-group">
                        <label>primary spell : </label>
                        <select id="spellId" value='<%=selectedCharacter.primarySpell ? selectedCharacter.primarySpell.name : ""%>'>
                            <% Object.entries(selectedCharacter.spells).forEach(([key, spell]) => { %>
                            <option value="<%=spell.id%>"><%=spell.name%></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="characterProfileSection">
                    <h>Roleplay</h>
                    <hr size="8" width="90%" color="red"> 
                    <div class="myform-group">
                        <label>primary stat : </label>
                        <select id="spellId" value='<%=selectedCharacter.primaryStatId ? selectedCharacter.primaryStatId : ""%>'>
                            <% Object.entries(accounts.stats).forEach(([name, id]) => { %>
                            <option value="<%=id%>"><%=name%></option>
                            <% }) %>
                        </select>
                    </div>
                </div>

                <div class="managerBottomButtonsBar">
                    <button class="btn btn-primary" onclick="saveCharacterProfile()">save</button>
                    <button class="btn btn-primary" onclick="cancelCharacterProfileEdit()">cancel</button>
                </div>
            </div>
        </div>
    </div>
</body>

</html>