<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <title>Grider</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="<%= nodeModulesUrl + '/bootstrap/dist/css/bootstrap.min.css'%>" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="<%= cssUrl + '/main.css'%>"/>
    <!-- Bootstrap Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script>let $ = require('jquery');</script>
    <script>require('popper');</script>
    <script>require('bootstrap');</script>
    <script defer src="render.js"></script>
</head>

<body>
    <div class="wrapper">
        <%- include(sidebarUrl, {active: 'paths'}) %>
        <div class="bodyRightView">
            <div class="pathsFormsContainer">
                <div class="myform-group">
                    <label for="pathName">name : </label>
                    <input type="text" id="pathName" placeholder="path name" value='<%=paths.currentEditedPath ? paths.currentEditedPath.name : ""%>'>
                </div>
                <div class="myform-group">
                    <label for="pathType">type : </label>
                    <select id="pathType" value='<%=paths.currentEditedPath ? paths.currentEditedPath.type : ""%>'>
                        <% paths.types.forEach(pathType => { %>
                        <option value="<%=pathType%>"><%=pathType%></option>
                        <% }) %>
                    </select>
                </div> 
                <div class="myform-group">
                    <label for="startMapId">startMapId : </label>
                    <input type="number" id="startMapId" value='<%=paths.currentEditedPath ? paths.currentEditedPath.startVertex.mapId : ""%>'>
                </div>
                <div class="myform-group">
                    <label for="startMapRpZone">startMapRpZone : </label>
                    <input type="number" id="startMapRpZone" value='<%=paths.currentEditedPath ? paths.currentEditedPath.startVertex.mapRpZone : 1%>'>
                </div>
                <div class="managerBottomButtonsBar">
                    <button class="btn btn-primary" onclick="createPath()">confirm</button>
                    <button class="btn btn-primary" onclick="cancelCreatePath()">cancel</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>