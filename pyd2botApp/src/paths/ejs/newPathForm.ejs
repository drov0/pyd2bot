<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <title>Grider</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="<%= nodeModulesUrl + '/bootstrap/dist/css/bootstrap.min.css'%>" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="<%= cssUrl + '/main.css'%>"/>
    <!-- Bootstrap Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script>let $ = require('jquery');</script>
    <script>require('popper');</script>
    <script>require('bootstrap');</script>
    <script defer src="render.js"></script>
</head>

<body>
    <div class="wrapper">
        <%- include(sidebarUrl, {active: 'paths'}) %>
        <div class="bodyRightView">
            <div class="pathsFormsContainer">
                <div class="form-group">
                    <label for="pathName">name</label>
                    <input type="text" id="pathName" placeholder="path name">
                </div>
                <div class="form-group">
                    <label for="pathType">type</label>
                    <select id="pathType">
                        <% paths.types.forEach(pathType => { %>
                        <option value="<%=pathType%>"><%=pathType%></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="fightOnly">fightOnly</label>
                    <input type="checkbox" id="fightOnly">
                </div>                
                <div class="form-group">
                    <label for="monsterLvlCoefDiff">monsterLvlCoefDiff</label>
                    <input type="number" id="monsterLvlCoefDiff" placeholder="">
                </div>
                <div class="form-group">
                    <label for="startMapId">startMapId</label>
                    <input type="number" id="startMapId" placeholder="">
                </div>
                <div class="form-group">
                    <label for="startMapRpZone">startMapRpZone</label>
                    <input type="number" id="startMapRpZone" placeholder="">
                </div>
                <div class="form-group">
                    <label for="subAreaId">subAreaId</label>
                    <input type="number" id="subAreaId" placeholder="">
                </div>
                <div class="managerBottomButtonsBar">
                    <button class="btn btn-primary" onclick="createPath()">confirm</button>
                    <a href="<%=paths.urls.managePathsUrl%>"><button class="btn btn-primary">cancel</button></a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>