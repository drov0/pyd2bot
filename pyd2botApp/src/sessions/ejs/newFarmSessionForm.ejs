<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <title>Grider</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="<%= nodeModulesUrl + '/bootstrap/dist/css/bootstrap.min.css'%>" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="<%= cssUrl + '/main.css'%>"/>
    <!-- Bootstrap Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script>let $ = require('jquery');</script>
    <script>require('popper');</script>
    <script>require('bootstrap');</script>
    <script defer src="render.js"></script>
</head>

<body>
    <div class="wrapper">
        <%- include(sidebarUrl, {active: 'sessions'}) %>
        <div class="bodyRightView">
            <div class="pathsFormsContainer">
                <h>Enter session config</h>
                <div class="myform-group">
                    <label for="name">name : </label>
                    <input class="myfg-input form-control" type="text" id="name" value='<%=sessions.currentEditedSession ? sessions.currentEditedSession.name : ""%>'>
                </div>
                <div class="myform-group">
                    <label for="path">path : </label>
                    <select class="myfg-input form-select" id="path" value='<%=sessions.currentEditedSession ? sessions.currentEditedSession.pathId : ""%>'>
                        <% Object.keys(paths.pathsDB).forEach(key => { %>
                        <option value="<%=key%>"><%=key%></option>
                        <% }) %>
                    </select>
                </div>
                <div class="myform-group">
                    <label for="sessionType">type : </label>
                    <label id="sessionType" class="myfg-input" value="farm">farm</label>
                </div>
                <div class="myform-group">
                    <label>jobs : </label>
                    <div class="myfg-input">
                        <div class="mylist-select-and-button">
                            <select id="job" class="form-select">
                                <% Object.entries(dofus2Data.skills).forEach(([key, skill]) => { %>
                                <option value="<%=skill.id%>"><%=skill.name%></option>
                                <% }) %>
                            </select>
                            <input type='button' value='+' id='addJob' onclick="addJob()"/>
                        </div>
                        <ul class="list-group" id='jobs'></ul>
                    </div>
                </div>
                <div class="myform-group">
                    <label>Resources : </label>
                    <div class="myfg-input">
                        <div class="mylist-select-and-button">
                            <select id="resources" class="form-select"></select>
                            <input type='button' value='+' id='addResource' onclick="addResource()"/>
                        </div>
                        <ul class="list-group" id='resources'></ul>
                    </div>
                </div>
                <div class="managerBottomButtonsBar">
                    <button class="btn btn-primary" onclick="createSession()">confirm</button>
                    <button class="btn btn-primary" onclick="cancelCreateSession()">cancel</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>