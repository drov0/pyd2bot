<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <title>Grider</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="<%= nodeModulesUrl + '/bootstrap/dist/css/bootstrap.min.css'%>" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="<%= cssUrl + '/main.css'%>"/>
    <!-- Bootstrap Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script>let $ = require('jquery');</script>
    <script>require('popper');</script>
    <script>require('bootstrap');</script>
    <script defer src="render.js"></script>
</head>

<body>
    <div class="wrapper">
        <%- include(sidebarUrl, {active: 'characters' }) %>
        <div class="bodyRightView">
            <div class="accountFormsContainer">
                <div class="form-group">
                    <label for="accountId">entryId</label>
                    <input type="text" class="form-control" id="accountId" placeholder='<%=accounts.currentEditedAccount ? '' : "Enter entry id"%>' value="<%=accounts.currentEditedAccount ? accounts.currentEditedAccount.id : ""%>" >
                </div>
                <div class="form-group">
                    <label for="accountLogin">login</label>
                    <input type="text" class="form-control" id="accountLogin" placeholder='<%=accounts.currentEditedAccount ? '' : "Enter account login"%>' value='<%=accounts.currentEditedAccount ? accounts.currentEditedAccount.login : ""%>'>
                </div>
                <div class="form-group">
                    <label for="accountPassword">Password</label>
                    <input type="password" class="form-control" id="accountPassword" placeholder='<%=accounts.currentEditedAccount ? '' : "Enter account password"%>' value='<%=accounts.currentEditedAccount ? accounts.currentEditedAccount.password : ""%>'>
                </div>
                <div class="managerBottomButtonsBar">
                    <button class="btn btn-primary" onclick="createAccount()">confirm</button>
                    <a href="<%=accounts.urls.manageAccountsUrl%>"><button class="btn btn-primary">cancel</button></a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>